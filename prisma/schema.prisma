generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model MediaItem {
  id          Int      @id @default(autoincrement())
  videoId     String   @unique
  title       String
  description String
  year        Int
  week        Int
  type        String   @default("highlight")
  submittedAt DateTime @default(now())

  @@index([year, week])
}
